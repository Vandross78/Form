ALGORITHM iterative_repeat
VAR
    Correct: STRING := "Blocks";
    password: STRING;
    Tries: INTEGER := 0;

BEGIN
    REPEAT //  This prompts the user for input
        write('Password')
        Read('Correct')
        Tries := Tries + 1
        // if password attempts is more than 3 then break
    UNTIL ( password = Correct) Or ( Password = Tries > 3) 
    
    IF(Tries > 3)
        Write( Maximum attempts Exceeded )
    END_IF
END